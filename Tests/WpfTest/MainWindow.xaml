<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Label Width="50" Height="30"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="150,70" 
               Content ="Логин"/>
        <Label Width="60" Height="30"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="450,70" 
               Content="Пароль"/>
        <TextBox x:Name="LoginEdit" Width="200" Height="15"
                   VerticalAlignment="Top" HorizontalAlignment="Left"
                   Margin="70, 100" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name ="PasswordEdit" Width="200" Height="15"
                   VerticalAlignment="Top" HorizontalAlignment="Left"
                   Margin="370, 100" VerticalContentAlignment="Center"/>
        <Button  Content="Отправка почты" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="250,150,0,0"
                Height="50" Width="100" Click="OnButtonClick"
                />
    </Grid>
</Window>
